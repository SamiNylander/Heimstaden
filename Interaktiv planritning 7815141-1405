<script>
/* Byt bild-URL:er nedan till dina GitHub Pages-länkar */
const galleries = {
  "Badrum/WC": [
    https://github.com/SamiNylander/Heimstaden/1000001916.jpg",
    https://github.com/SamiNylander/Heimstaden/1000001918.jpg"
  ],
  "Vardagsrum": [
    https://github.com/SamiNylander/Heimstaden/1000001903.jpg"
  ],
  "Kök": [
    https://github.com/SamiNylander/Heimstaden/1000001905.jpg",
    https://github.com/SamiNylander/Heimstaden/1000001906.jpg",
    https://github.com/SamiNylander/Heimstaden/1000001909.jpg",
    https://github.com/SamiNylander/Heimstaden/1000001914.jpg"
  ],
  "Hall/Övrigt": [
    https://github.com/SamiNylander/Heimstaden/1000001902.jpg"
  ],
  "Sovrum": [
    "https://github.com/SamiNylander/Heimstaden/1000001911.jpg"
  ]
};

let room=null, idx=0;
function openM(r){
  room=r; idx=0;
  document.getElementById('title').textContent=r;
  const imgs=galleries[r]; if(!imgs||!imgs.length) return;
  document.getElementById('main').src=imgs[0];
  const t=document.getElementById('thumbs'); t.innerHTML='';
  imgs.forEach((src,i)=>{const im=new Image(); im.src=src; im.onclick=()=>show(i); if(i===0) im.classList.add('active'); t.appendChild(im);});
  document.getElementById('m').setAttribute('open','');
}
function closeM(){ document.getElementById('m').removeAttribute('open'); }
function show(i){
  idx=i; const imgs=galleries[room];
  document.getElementById('main').src=imgs[i];
  [...document.querySelectorAll('#thumbs img')].forEach((n,k)=>n.classList.toggle('active',k===i));
}
function prev(){ const imgs=galleries[room]; if(!imgs) return; idx=(idx-1+imgs.length)%imgs.length; show(idx); }
function next(){ const imgs=galleries[room]; if(!imgs) return; idx=(idx+1)%imgs.length; show(idx); }

document.querySelectorAll('.dot').forEach(d=>d.addEventListener('click',()=>openM(d.dataset.room)));
window.addEventListener('keydown',e=>{ if(e.key==='Escape') closeM(); });
</script>
